<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="0, 1, 2, 3"
    android:background="#b6b6b6">

    <TableRow android:background="#ff913d">
        <TextView
            android:layout_span = "4"
            android:text="0"
            android:textSize="100dp"
            android:id="@+id/TextView1"
            android:layout_gravity="right" />
    </TableRow>

    <TableRow>
        <Button
            android:layout_span = "2"
            android:textSize="80dp"
            android:background="#80a2ec"
            android:text="AC"
            android:onClick="resetAll" />
        <Button
            android:layout_span = "1"
            android:textSize="80dp"
            android:text="%"
            android:onClick="module" />
        <Button
            android:layout_span = "1"
            android:textSize="80dp"
            android:text="/"
            android:onClick="division" />
    </TableRow>

    <TableRow>
        <Button
            android:layout_span = "1"
            android:textSize="80dp"
            android:text="1"
            android:onClick="addOne" />
        <Button
            android:layout_span = "1"
            android:textSize="80dp"
            android:text="2"
            android:onClick="addTwo" />
        <Button
            android:layout_span = "1"
            android:textSize="80dp"
            android:text="3"
            android:onClick="addThree" />
        <Button
            android:layout_span = "1"
            android:textSize="80dp"
            android:text="x"
            android:onClick="multiplication" />
    </TableRow>

    <TableRow>
        <Button
            android:layout_span = "1"
            android:textSize="80dp"
            android:text="4"
            android:onClick="addFour" />
        <Button
            android:layout_span = "1"
            android:textSize="80dp"
            android:text="5"
            android:onClick="addFive" />
        <Button
            android:layout_span = "1"
            android:textSize="80dp"
            android:text="6"
            android:onClick="addSix" />
        <Button
            android:layout_span = "1"
            android:textSize="80dp"
            android:text="-"
            android:onClick="subtraction" />
    </TableRow>

    <TableRow>
        <Button
            android:layout_span = "1"
            android:textSize="80dp"
            android:text="7"
            android:onClick="addSeven" />
        <Button
            android:layout_span = "1"
            android:textSize="80dp"
            android:text="8"
            android:onClick="addEight" />
        <Button
            android:layout_span = "1"
            android:textSize="80dp"
            android:text="9"
            android:onClick="addNine" />
        <Button
            android:layout_span = "1"
            android:textSize="80dp"
            android:text="+"
            android:onClick="addition" />
    </TableRow>

    <TableRow>
        <Button
            android:layout_span = "2"
            android:textSize="80dp"
            android:text="0"
            android:onClick="addZero" />
        <Button
            android:layout_span = "2"
            android:textSize="80dp"
            android:background="#80a2ec"
            android:text="="
            android:onClick="doMath" />
    </TableRow>

</TableLayout>
