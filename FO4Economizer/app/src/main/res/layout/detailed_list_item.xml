<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detailed_list_item_clo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/detailed_list_item_root_vlo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#787878"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/detailed_list_item_title_hlo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detailed_list_item_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="@string/detailed_list_item_name_colontext"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/detailed_list_item_difficulty_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:text="@string/detailed_list_item_difficulty_colontext"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/detailed_list_item_values_hlo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/detailed_list_item_values_vlo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#9C9C9C"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/detailed_list_item_base_value_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:text="@string/detailed_list_item_base_value_colontext"
                    android:textColor="#263238"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/detailed_list_item_sale_value_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:text="@string/detailed_list_item_sale_value_colontext"
                    android:textColor="#263238"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/detailed_list_item_ruined_value_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:text="@string/detailed_list_item_ruined_value_colontext"
                    android:textColor="#263238"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/detailed_list_item_prestine_value_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:text="@string/detailed_list_item_prestine_value_colontext"
                    android:textColor="#263238"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/detailed_list_item_vpw_vlo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#9C9C9C"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/detailed_list_item_base_vpw_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="@string/detailed_list_item_base_vpw_colontext"
                    android:textColor="#263238"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/detailed_list_item_sale_vpw_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="@string/detailed_list_item_sale_vpw_colontext"
                    android:textColor="#263238"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/detailed_list_item_ruined_vpw_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="@string/detailed_list_item_ruined_vpw_colontext"
                    android:textColor="#263238"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/detailed_list_item_prestine_vpw_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="@string/detailed_list_item_prestine_vpw_colontext"
                    android:textColor="#263238"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/detailed_list_item_weight_hlo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detailed_list_item_weight_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="@string/detailed_list_item_weight_colontext"
                android:textColor="#000000"
                android:textSize="12sp" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/detailed_list_item_craft_list_sv"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/detailed_list_item_craft_list_hlo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/detailed_list_item_craft_list_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:text="@string/detailed_list_item_craft_list_colontext"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#000000"
            android:orientation="horizontal"></LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>