<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_root_vlo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".flow.MainActivity">


    <TextView
        android:id="@+id/main_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#717171"
        android:gravity="center_horizontal"
        android:text="@string/main_title_text"
        android:textColor="#212121"
        android:textSize="48sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/main_employees_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="#B1B1B1"
        android:padding="10dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/main_get_employees_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#8E8E8E"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:text="@string/main_get_employees_text"
        android:textSize="24sp"
        tools:ignore="DuplicateSpeakableTextCheck" />
</LinearLayout>