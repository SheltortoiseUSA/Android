<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/new_account_clo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal|center_vertical"
    android:background="#000000"
    tools:context=".NewAccountFragment">

    <LinearLayout
        android:id="@+id/new_account_master_vlo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#9A018786"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/new_account_input_hlo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/new_account_text_vlo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/new_account_username_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/cd_new_account_username_textview"
                    android:padding="10dp"
                    android:text="@string/new_account_username_colontext"
                    android:textColor="@color/white"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/new_account_password_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/cd_new_account_password_textview"
                    android:padding="10dp"
                    android:text="@string/new_account_password_colontext"
                    android:textColor="@color/white"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/new_account_repeat_password_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/cd_new_account_repeat_password_textview"
                    android:padding="10dp"
                    android:text="@string/new_account_repeat_password_colontext"
                    android:textColor="@color/white"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/new_account_email_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/cd_new_account_email_textview"
                    android:padding="10dp"
                    android:text="@string/new_account_email_colontext"
                    android:textColor="@color/white"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/new_account_input_vlo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/new_account_username_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="@string/new_account_username_hinttext"
                    android:ems="10"
                    android:focusableInTouchMode="true"
                    android:hint="@string/new_account_username_hinttext"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:textColorHint="#4DFFFFFF"
                    android:textSize="24sp"
                    tools:ignore="TextContrastCheck" />

                <EditText
                    android:id="@+id/new_account_password_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="@string/new_account_password_hinttext"
                    android:ems="10"
                    android:focusableInTouchMode="true"
                    android:hint="@string/new_account_password_hinttext"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:textColorHint="#4DFFFFFF"
                    android:textSize="24sp"
                    tools:ignore="TextContrastCheck" />

                <EditText
                    android:id="@+id/new_account_repeat_password_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="@string/new_account_repeat_password_hinttext"
                    android:ems="10"
                    android:focusableInTouchMode="true"
                    android:hint="@string/new_account_repeat_password_hinttext"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:textColorHint="#4DFFFFFF"
                    android:textSize="24sp"
                    tools:ignore="TextContrastCheck" />

                <EditText
                    android:id="@+id/new_account_email_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="@string/new_account_email_hinttext"
                    android:ems="10"
                    android:focusableInTouchMode="true"
                    android:hint="@string/new_account_email_hinttext"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:textColorHint="#4DFFFFFF"
                    android:textSize="24sp"
                    tools:ignore="TextContrastCheck" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/new_account_confirmation_vlo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/new_account_status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/cd_new_account_status_textview"
                android:drawablePadding="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="@string/new_account_status_text"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:drawableEndCompat="@drawable/tiny_checkmark_placeholder" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/new_account_confirmation_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                android:background="@color/teal_700"
                android:contentDescription="@string/cd_new_account_confirmation_button"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/new_account_confirmation_button_text"
                android:textColor="@color/white"
                android:textSize="30sp"
                tools:ignore="RedundantDescriptionCheck,TextContrastCheck" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>